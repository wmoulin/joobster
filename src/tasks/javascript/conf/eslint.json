{
    "ecmaFeatures": {
        "arrowFunctions": true,
        "blockBindings": true,
        "classes": true,
        "defaultParams": true,
        "forOf": true,
        "modules": true,
        "restParams": true,
        "spread": true,
        "superInFunctions" : true
    },
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "rules": {
        "quotes": [2, "double"],
        "comma-dangle": 2,
        "semi": 2,
        "no-console": 2
    }
}
